{
  "exclude": ["dist", "example", "node_modules"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  }
}
